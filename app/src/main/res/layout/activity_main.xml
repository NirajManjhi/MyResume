<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.admin.myresume.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFF00"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/bg_main"
            android:nestedScrollingEnabled="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/dp_photo"
                app:civ_border_width="2dp"
                app:civ_border_color="#F44336"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Niraj Manjhi , 23"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold"
                android:nestedScrollingEnabled="true"/>

            <TextView
                android:id="@+id/tv_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Engineer @Infosys"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:nestedScrollingEnabled="true"/>

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangalore"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="true"/>

        </LinearLayout>



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res/auto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/card_view1"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            android:backgroundTint="#ffffff"
            android:nestedScrollingEnabled="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="I am a Java developer with knowledge of android architecture. I have a good analytical ability.Swimming, Badminton, cricket and bollywood music. Travelling the world is my dream."
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:nestedScrollingEnabled="true"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res/auto"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/card_view2"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            android:backgroundTint="#ffffff"
            android:nestedScrollingEnabled="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:nestedScrollingEnabled="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="System Engineer"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:nestedScrollingEnabled="true"/>

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Infosys"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:nestedScrollingEnabled="true"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_main"
                android:orientation="vertical"
                android:nestedScrollingEnabled="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right Now I Am Working On"
                    android:textAlignment="viewStart"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:nestedScrollingEnabled="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developing different tools to automate the mannual processes like sending business reports using java and also working on developing mobile android application."
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="true"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


