<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.admin.myresume.ActivityTest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFF00">

        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/card_view1"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_view1"
            android:src="@drawable/bg_main"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circular_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/dp_photo"
                app:civ_border_width="2dp"
                app:civ_border_color="#f9e33f"
                android:scaleX=".6"
                android:scaleY=".6"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/my_name_age"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_my_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_designation"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_my_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_location"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res/auto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/card_view2"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            android:backgroundTint="#ffffff"
            android:layout_marginTop="-8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_my_desc"
                android:layout_gravity="center"
                android:text="@string/my_desc"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/card_view3"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            android:backgroundTint="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:nestedScrollingEnabled="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_my_designation_only"
                    android:layout_gravity="left"
                    android:text="@string/my_designation_only"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_my_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_company"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:textColor="#000000"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/card_view4"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardCornerRadius="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_view2"
                android:src="@drawable/bg_main"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:nestedScrollingEnabled="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_current_work_heading"
                    android:layout_gravity="left"
                    android:text="@string/currently_working_heading"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:textColor="#9E9E9E"/>

                <TextView
                    android:id="@+id/tv_current_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currently_working_desc"
                    android:textAlignment="textStart"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:textColor="#ffffff"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view5"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            android:backgroundTint="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:nestedScrollingEnabled="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_job_role_applying"
                    android:layout_gravity="left"
                    android:text="@string/job_role_head"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_marginTop="15dp"
                    android:textColor="#424242"
                    android:paddingLeft="10dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_job_role"
                        android:src="@drawable/android_logo"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/tv_job_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/android_developer"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:textColor="#000000"
                        android:paddingLeft="10dp"
                        android:layout_toRightOf="@id/img_job_role"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_experience"
                        android:layout_gravity="left"
                        android:text="@string/experience"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="italic"
                        android:textColor="#424242"
                        android:paddingLeft="10dp"
                        android:layout_below="@id/img_job_role"
                        android:layout_toRightOf="@id/img_job_role"
                        android:layout_marginBottom="5dp"/>
                </RelativeLayout>



            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view6"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            android:backgroundTint="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linear_education1"
                android:orientation="vertical"
                android:nestedScrollingEnabled="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_edu_title"
                    android:layout_gravity="center"
                    android:text="@string/edu_title"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:textColor="#424242" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_colg_name"
                    android:text="@string/colg_name"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_degree_name"
                    android:text="@string/degree_btech"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="#424242" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_degree_marks"
                    android:text="@string/degree_marks"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="#424242" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_education2"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_poly_name"
                        android:text="@string/poly_name"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_polydegree_name"
                        android:text="@string/degree_poly"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:textColor="#424242" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_poly_marks"
                        android:text="@string/poly_marks"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="italic"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:textColor="#424242" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_school_name"
                        android:text="@string/school_name"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="10dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_school_marks"
                        android:text="@string/school_marks"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="italic"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:textColor="#424242" />

                </LinearLayout>



                <ImageButton
                    android:id="@+id/imgbtn_expand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/expand_btn" />

                <ImageButton
                    android:id="@+id/imgbtn_collapse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/collapse_btn"
                    android:visibility="gone"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hz_scroll_skills"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hz_scroll_linear_layout_skills"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            xmlns:attrs="http://schemas.android.com/apk/res-auto"
            android:layout_margin="8dp"
            android:background="@drawable/bg_viewpager">

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewpager"
                />

            <com.rd.PageIndicatorView
                android:id="@+id/pageIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                attrs:piv_animationType="worm"
                android:layout_gravity="center"
                attrs:piv_selectedColor="@color/colorPrimary"
                attrs:piv_unselectedColor="#d7d7d7"
                attrs:piv_interactiveAnimation="true"
                attrs:piv_radius="4dp"
                attrs:piv_viewPager="@id/viewpager"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:nestedScrollingEnabled="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_location_in_map"
                android:textSize="15dp"
                android:textStyle="italic"
                android:background="#FF5722"
                android:textColor="@color/cardview_light_background"/>

            <fragment
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.admin.myresume.ActivityTest" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>